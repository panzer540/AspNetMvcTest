@using ViewModel.SPA
@model MainViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script src="~/scripts/jquery-ui-1.12.1.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Single Page Application</title>
    <script>
        //-----------------------------
        function OpenAddNew() {
            $.get("/SPA/Main/AddNew").then(
                function (r) {
                    $("<div id='DivCreateEmployee'></div>").html(r).
                        dialog({
                            width: 'auto', height: 'auto', modal: true, title: "Create New Employee",
                            closeText: "",
                            //positon: { my: "left top", at: "left bottom", of: button },
                            close: function() {                           
                                $('#DivCreateEmployee').remove();
                            }
                        });
                }
            )
        }
        //------------------------------
        function OpenEmployeesUpload() {
            $.get("/SPA/SpaBulkUpload/UploadEmployees").then(
                function (r) {
                    $("<div id='DivUploadEmployees'></div>").html(r).
                        dialog({
                            width: 'auto', height: 'auto', modal: true, title: "Upload Employees",
                            closeText: "",
                            close: function () {
                                $('#DivUploadEmployees').remove();
                            }
                        });
                }
            )
        }
        //-----------------------------


    </script>

</head>
<body>
    <div style="text-align:center;">
        Hello,@Model.UserName <a href="">Logout</a>
    </div>
    <hr />
    
    @{ 
        Html.RenderAction("EmployeeList");
    }

    <div style="text-align:right;background-color: silver;color: darkcyan;border: 1px solid gray;margin-top:2px;padding-right:10px;">
        @Model.FooterData.CompanyName © @Model.FooterData.Year
    </div>
</body>
</html>
